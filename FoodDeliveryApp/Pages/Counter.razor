@page "/counter"
@page "/counter/{incrementByUrlSlug}"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public string? IncrementByUrlSlug { get; set; }

    [Parameter]
    public int IncrementBy { get; set; } = 1;

    protected override Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(IncrementByUrlSlug))
            IncrementBy = int.Parse(IncrementByUrlSlug);

        return base.OnParametersSetAsync();
    }

    private void IncrementCount() => currentCount += IncrementBy;
}

